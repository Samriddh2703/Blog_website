<%- include('partials/header') -%>

    <h1>Compose</h1>
    <form class="" method="post" action="/compose">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle" placeholder="Enter title of your blog">
            <label>Post</label>
            <textarea class="form-control" name="postBody" rows="5" cols="30" placeholder="Enter content of your blog in minimum 100 characters"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>

    <%- include('partials/footer') -%>